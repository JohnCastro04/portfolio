---
import Github from "../components/icons/Github.astro";
import CvDownload from "../components/icons/CvDownload.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";

// SocialMenu.astro
export interface Props {
  className?: string;
}

const { className } = Astro.props;

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/JohnCastro04",
    icon: "github",
    label: "Ver perfil de GitHub",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/johncastrod",
    icon: "linkedin",
    label: "Conectar en LinkedIn",
  },
  {
    name: "Email",
    url: "mailto:johncastrod04@gmail.com",
    icon: "email",
    label: "Enviar correo",
  },
  {
    name: "CV",
    url: "public/CV John Castro - 2025.pdf",
    icon: "cv",
    label: "Descargar CV",
    download: true,
  },
];

const iconComponents = {
  github: Github,
  linkedin: LinkedinIcon,
  email: MailIcon,
  cv: CvDownload,
};
---

<div class={`social-menu ${className || ""}`}>
  <ul class="social-list">
    {
      socialLinks.map((link) => {
        const IconComponent = iconComponents[link.icon as keyof typeof iconComponents];
        return (
          <li class="social-item">
            <a
              href={link.url}
              target={
                link.name !== "Email" && !link.download ? "_blank" : undefined
              }
              rel={
                link.name !== "Email" && !link.download
                  ? "noopener noreferrer"
                  : undefined
              }
              download={link.download}
              class="social-link"
              aria-label={link.label}
            >
              <IconComponent 
                color="var(--main-color)" 
                size={26} 
              />
              <span class="tooltip">{link.label}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
